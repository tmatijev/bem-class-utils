{
  "name": "bem-class-utils",
  "version": "1.0.0",
  "description": "Modern utility for BEM class manipulation",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node server.js",
    "build": "rollup -c",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "bem",
    "css",
    "utilities"
  ],
  "author": "Tomislav MatijeviÄ‡",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@types/jest": "^29.0.0",
    "express": "^4.21.2",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-typescript2": "^0.31.0",
    "ts-jest": "^29.0.0",
    "typescript": "^4.9.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/tests/**/*.{ts,tsx}"
    ]
  }
}
